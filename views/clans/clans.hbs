<div class="container justify-content-center">
    <div class="row">
        <div class="col-6">
            <h1 class="card-title">Clans list</h1>
        </div>
        <div class="col-6 d-flex justify-content-end  form">
            <form action="/clans/details" method="post">
                <input type="text" name="tag" placeholder="Tag without #">
                <input type="submit" value="submit">
            </form>
        </div>
    </div>    
    
    <div class="row">
        {{#each datos}}
        <div class="col-3"style="margin: 10px 0;">
            <div class="card" style="width: 16rem; align-items: center;">
                <h4 class="card-title" >{{name}}<hr></h4>
                
                <div class="card-body" >
                    <p class="card-text icon"><img src="/images/trophy.png"><strong>War Trophies : </strong>{{clanWarTrophies}}</p>
                    <p class="card-text icon"><img src="/images/trophy (1).png"><strong>Score : </strong>{{clanScore}}</p>
                    <p>{{tag}} </p>
                </div>
            </div>
        </div>

        {{/each}}

    </div>
</div>


